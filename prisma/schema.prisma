generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classes {
  id      Int      @id @default(autoincrement())
  nome    String
  idade   Int
  pontos  Int
  points  Points[]
}

model Points {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  classId   Int
  class     Classes  @relation(fields: [classId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  level    Level
  username String @unique
  password String
}

enum Level {
  USER
  ADMIN
}
